<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/image_for_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:contentDescription="@string/location_pin"
        android:src="@drawable/loc" />

    <TextView
        android:id="@+id/title_of_list"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/image_for_list"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/image_for_list"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        tools:text="Place name"
        android:textSize="17sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/description_of_list"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/image_for_list"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/image_for_list"
        android:gravity="center_vertical"
        tools:text="Place Description"
        android:paddingEnd="7dp"
        android:textSize="13sp"
        android:paddingStart="7dp"/>


</RelativeLayout>